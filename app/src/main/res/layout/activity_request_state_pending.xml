<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_spacing"
    tools:context="com.iic.shopingo.ui.request_flow.activities.RequestStateActivity">
  <Space
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      />
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/request_state_title_pending"
      android:paddingBottom="@dimen/small_spacing"
      style="@style/TitleText.Centered"
      />
  <TextView
      android:id="@+id/request_state_status_explanation"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Placeholder text for state which can also span two or more lines."
      style="@style/BodyText.Centered"
      />
  <Space
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="3"
      />
  <Button
      android:id="@+id/request_state_cancel_button"
      android:text="@string/request_state_cancel_button"
      style="@style/PrimaryButton"
      />

</LinearLayout>
