<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
    <ImageView
        android:id="@+id/request_details_avatar_icon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        />
    <TextView
        android:id="@+id/request_details_requester_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:text="Moshe"
        android:textSize="30sp"
        />
      </LinearLayout>
  <ListView
      android:id="@+id/request_details_items_list"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      />
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      >
    <TextView
        android:id="@+id/request_details_offer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offered Price: $0.0"
        android:textSize="20sp"
        />
  </LinearLayout>
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      >
    <TextView
        android:id="@+id/request_details_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deliver to: 13 Rothschild Blvd., Tel Aviv"
        />
  </LinearLayout>
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      />
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <Button
        android:id="@+id/request_details_accept_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_accept_request"
        android:drawableLeft="@drawable/ic_action_accept_green"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/request_details_decline_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_decline_request"
        android:drawableLeft="@drawable/ic_action_cancel_red"
        android:layout_weight="1"
        />
  </LinearLayout>
</LinearLayout>