<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      >
    <TextView
        android:id="@+id/request_details_requester_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Moshe"
        android:layout_weight="1"
        android:textSize="30sp"
        />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    </FrameLayout>
    <ImageButton
        android:id="@+id/request_details_call_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/sym_action_call"
        />
  </LinearLayout>
  <TextView
      android:id="@+id/request_details_num_items"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="5 Items"
      />
  <ListView
      android:id="@+id/request_details_items_list"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="1"
      />
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offered Price:"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/request_details_offer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$50.00"
        android:textSize="20sp"
        android:layout_weight="1"
        android:gravity="right"
        />
  </LinearLayout>
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deliver to: "
        />
    <TextView
        android:id="@+id/request_details_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rothschild 13, Tel Aviv"
        android:layout_weight="1"
        />
  </LinearLayout>

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      >
    <Button
        android:id="@+id/request_details_accept_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/request_details_decline_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reject"
        android:layout_weight="1"
        />
  </LinearLayout>
</LinearLayout>