<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.iic.shopingo.ui.request_flow.activities.CreateShoppingListActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:padding="@dimen/default_spacing"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/default_spacing"
        >
      <com.makeramen.roundedimageview.RoundedImageView
          xmlns:app="http://schemas.android.com/apk/res-auto"
          app:riv_corner_radius="@dimen/avatar_corner_radius"
          android:id="@+id/create_request_shopper_avatar"
          android:layout_marginRight="@dimen/default_spacing"
          android:src="@mipmap/ic_launcher"
          style="@style/Avatar"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_gravity="center_vertical"
          >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_request_request_from"
            style="@style/HelperText"
            />
        <TextView
            android:id="@+id/create_request_shopper_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Launcher Guy"
            style="@style/TitleText"
            />
      </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What do you want to buy?"
        android:paddingLeft="@dimen/default_spacing"
        android:paddingRight="@dimen/default_spacing"
        style="@style/SubTitleText"
        />

    <com.iic.shopingo.ui.request_flow.views.CreateRequestItemListView
        android:id="@+id/create_request_items_list"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/default_spacing"
        android:paddingRight="@dimen/default_spacing"
        android:layout_marginBottom="@dimen/default_spacing"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How much are you willing to pay?"
        android:paddingLeft="@dimen/default_spacing"
        android:paddingRight="@dimen/default_spacing"
        style="@style/SubTitleText"
        />
    <EditText
        android:id="@+id/create_request_offer_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/small_spacing"
        android:layout_marginBottom="@dimen/default_spacing"
        android:inputType="number"
        android:hint="@string/create_request_price_hint"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />
    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/create_request_create_button"
        android:enabled="false"
        android:text="@string/create_request_create_button"
        android:layout_gravity="center_horizontal"
        style="@style/PrimaryButton"
        />
  </LinearLayout>
</ScrollView>
