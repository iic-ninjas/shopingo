<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.iic.shopingo.ui.request_flow.activities.CreateShoppingListActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:paddingTop="16dp"
      android:paddingBottom="16dp"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What do you want to buy?"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        style="@style/SectionHeader"
        />

    <com.iic.shopingo.ui.request_flow.views.CreateRequestItemListView
        android:id="@+id/create_request_items_list"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How much are you willing to pay?"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        style="@style/SectionHeader"
        />
    <EditText
        android:id="@+id/create_request_offer_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:inputType="number"
        android:hint="@string/create_request_price_hint"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />
    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/create_request_create_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="@string/create_request_create_button"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/ic_action_send_now"
        android:paddingLeft="16dp"
        />
  </LinearLayout>
</ScrollView>
