<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    >

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      >
    <ImageView
        android:id="@+id/shopping_list_header_item_requester_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Moshe"
        android:id="@+id/shopping_list_header_item_requester_name"
        android:layout_weight="1"
        android:layout_marginLeft="8dp"
        android:textSize="34sp"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shopping_list_header_item_call_button"
        android:src="@drawable/ic_action_call_green"
        android:background="@android:color/transparent"
        />
  </LinearLayout>
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:id="@+id/shopping_list_item_items_container"
      >
  </LinearLayout>
</LinearLayout>