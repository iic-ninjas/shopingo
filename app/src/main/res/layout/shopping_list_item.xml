<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      >
    <ImageView
        android:id="@+id/shopping_list_header_item_requester_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Moshe"
        android:id="@+id/shopping_list_header_item_requester_name"
        android:layout_weight="1"
        android:textSize="34sp"
        android:layout_gravity="center_vertical"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shopping_list_header_item_call_button"
        android:src="@android:drawable/sym_action_call"
        />
  </LinearLayout>
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:id="@+id/shopping_list_item_items_container"
      android:paddingLeft="20dp"
      >
  </LinearLayout>
</LinearLayout>