<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.iic.shopingo.ui.HomeActivity"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    >

  <com.iic.shopingo.ui.home.ActionCardView
      android:id="@+id/home_action_card_shopping"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardDescription="Notify your friends that you're going shopping and take incoming requests for money!"
      app:cardButtonText="@string/home_go_shopping_btn_title"
      app:cardIcon="@mipmap/ic_launcher"
      />

  <com.iic.shopingo.ui.home.ActionCardView
      android:id="@+id/home_action_card_make_request"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardDescription="Ask friends to buy you what you need"
      app:cardButtonText="@string/home_create_request_btn_title"
      app:cardIcon="@mipmap/ic_launcher"
      />

</LinearLayout>
