<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <RelativeLayout
      android:id="@+id/home_content_container"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <fragment
        android:id="@+id/select_shopper_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.MapFragment"
        />
    <Button
        android:id="@+id/select_shopper_go_yourself_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/select_shopper_go_yourself_button"
        android:layout_alignParentBottom="true"
        />
  </RelativeLayout>
  <FrameLayout
      android:id="@+id/home_spinner_container"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />
  </FrameLayout>
</FrameLayout>

