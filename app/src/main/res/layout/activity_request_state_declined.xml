<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.iic.shopingo.ui.request_flow.RequestStateActivity">
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/request_state_title_declined"
      />
  <Button
      android:id="@+id/request_state_try_again_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/request_state_try_again_button"
      android:onClick="onTryAgain"
      />
  <Button
      android:id="@+id/request_state_go_yourself_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/request_state_go_yourself_button"
      android:onClick="onGoYourself"
      />

</LinearLayout>
