<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.iic.shopingo.ui.request_flow.activities.RequestStateActivity">
  <Space
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      />
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/request_state_title_declined"
      android:textSize="22dp"
      android:gravity="center"
      android:paddingBottom="8dp"
      />
  <TextView
      android:id="@+id/request_state_status_explanation"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      />
  <Space
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="3"
      />
  <Button
      android:id="@+id/request_state_try_again_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/request_state_try_again_button"
      />
  <Button
      android:id="@+id/request_state_go_yourself_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/request_state_go_yourself_button"
      />

</LinearLayout>
