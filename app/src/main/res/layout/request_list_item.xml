<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    style="@style/Card"
    >
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="@dimen/default_spacing"
      >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <ImageView
          android:id="@+id/request_list_item_avatar"
          android:layout_marginRight="@dimen/default_spacing"
          style="@style/Avatar"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          >
        <TextView
            android:id="@+id/request_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Moshe"
            style="@style/TitleText"
            />
        <TextView
            android:id="@+id/request_list_item_items_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 Items"
            style="@style/BodyText"
            />
      </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/request_list_item_items_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_spacing"
        android:orientation="vertical"
        />
    <TextView
        android:id="@+id/request_list_item_offer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_spacing"
        android:text="Offered Price: $0.0"
        style="@style/BodyText"
        />
    <TextView
        android:id="@+id/request_list_item_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Deliver to: 13 Rothschild Blvd., Tel Aviv"
        style="@style/BodyText"
        />
    <LinearLayout
        android:id="@+id/request_list_item_buttons_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_spacing"
        >
      <Button
          android:id="@+id/request_list_item_accept_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/action_accept_request"
          android:drawableLeft="@drawable/ic_action_accept_green"
          android:layout_weight="1"
          />
      <Button
          android:id="@+id/request_list_item_decline_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/action_decline_request"
          android:drawableLeft="@drawable/ic_action_cancel_red"
          android:layout_weight="1"
          />
    </LinearLayout>
  </LinearLayout>
</android.support.v7.widget.CardView>