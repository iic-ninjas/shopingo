<resources>

  <style name="AppTheme"
      parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="actionBarStyle">@style/ActionBar.Solid.Shopingo</item>
    <item name="colorPrimary">@color/gopherColor</item>
    <item name="colorPrimaryDark">@color/darkGopherColor</item>
  </style>

  <style name="ActionBar.Solid.Shopingo"
      parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
    <item name="displayOptions">useLogo|showHome</item>
    <item name="logo">@drawable/ic_logo</item>
    <!--<item name="background">@drawable/action_bar_bg</item>-->
    <item name="elevation">2dp</item>
  </style>

  <style name="SectionHeader">
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">@color/textColorSectionHeader</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_marginBottom">@dimen/default_spacing</item>
  </style>

</resources>
