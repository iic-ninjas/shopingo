<resources>

  <style name="AppTheme"
      parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="actionBarStyle">@style/ActionBar.Solid.Shopingo</item>
  </style>

  <style name="ActionBar.Solid.Shopingo"
      parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
    <item name="displayOptions">useLogo|showHome</item>
    <item name="logo">@drawable/ic_logo</item>
    <item name="background">@drawable/action_bar_bg</item>
    <item name="elevation">0dp</item>
  </style>

  <style name="SectionHeader">
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">@color/textColorSectionHeader</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_marginBottom">16dp</item>
  </style>

  <style name="ActionCardStyle">
    <item name="android:orientation">vertical</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">16dp</item>
    <item name="android:background">@drawable/action_card_background</item>
    <item name="android:padding">16dp</item>
    <item name="android:elevation">2dp</item>
  </style>


</resources>
