<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="actionBarStyle">@style/ActionBar.Solid.Shopingo</item>
    <item name="colorPrimary">@color/gopherColor</item>
    <item name="colorPrimaryDark">@color/darkGopherColor</item>
  </style>

  <style name="BlankBar" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="actionBarStyle">@style/ActionBar.Solid.NoActionBar</item>
    <item name="colorPrimary">@color/gopherColor</item>
    <item name="colorPrimaryDark">@color/darkGopherColor</item>
  </style>

  <style name="ActionBar.Solid.NoActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
    <item name="displayOptions">none</item>
    <item name="logo">@null</item>
    <item name="elevation">0dp</item>
  </style>

  <style name="ActionBar.Solid.Shopingo" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
    <item name="displayOptions">useLogo|showHome</item>
    <item name="logo">@drawable/ic_logo</item>
    <item name="elevation">2dp</item>
  </style>

</resources>
