<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="BaseText">
    <item name="android:textColor">@color/baseTextColor</item>
  </style>

  <style name="TitleText" parent="BaseText">
    <item name="android:textSize">@dimen/title_size</item>
  </style>

  <style name="SubTitleText" parent="BaseText">
    <item name="android:textSize">@dimen/subtitle_size</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="BodyText" parent="BaseText">
    <item name="android:textSize">@dimen/body_size</item>
  </style>

  <style name="HelperText" parent="BaseText">
    <item name="android:textSize">@dimen/helper_size</item>
    <item name="android:color">@color/helperTextColor</item>
  </style>

  <style name="TitleText.Centered">
    <item name="android:gravity">center</item>
  </style>

  <style name="SubTitleText.Centered">
    <item name="android:gravity">center</item>
  </style>

  <style name="BodyText.Centered">
    <item name="android:gravity">center</item>
  </style>
</resources>